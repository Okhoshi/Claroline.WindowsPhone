<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:selector="clr-namespace:ClarolineApp.TemplateSelector" xmlns:ClarolineApp="clr-namespace:ClarolineApp" xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
    mc:Ignorable="d" 
	>
	<DataTemplate x:Key="GenericPivotTemplate">
		<StackPanel>
			<TextBlock Text="{Binding name}" />
		</StackPanel>
	</DataTemplate>
	<DataTemplate x:Key="NotificationPivotTemplate">
		<Grid/>
	</DataTemplate>
</ResourceDictionary>