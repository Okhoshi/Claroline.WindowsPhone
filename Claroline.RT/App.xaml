<Application x:Class="Claroline.RT.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:Claroline.RT" xmlns:localData="using:Claroline.RT.Data">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- 
                    Styles définissant l'apparence globale de la plateforme
                    Requis par les modèles de projets et les modèles d'éléments Visual Studio
                 -->
        <ResourceDictionary Source="Common/StandardStyles.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <!-- Ressources spécifiques à l'application -->
      <x:String x:Key="AppName">Claroline.RT</x:String>
      <vm:ViewModelLocator x:Key="Locator" xmlns:vm="using:Claroline.RT.ViewModel" />
    </ResourceDictionary>
  </Application.Resources>
</Application>